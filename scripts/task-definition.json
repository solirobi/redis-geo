{
    "family": "${ECS_TASK}",
    "networkMode": "bridge",
    "containerDefinitions": [
        {
            "name": "nginx",
            "image": "jwilder/nginx-proxy",
            "memory": 256,
            "cpu": 256,
            "essential": true,
            "portMappings": [
                {
                "containerPort": 80,
                "protocol": "tcp"
                }
           ],
           "links": [
                "${IMAGE_NAME}-redis",
                "${IMAGE_NAME}"
            ]
        },
        {
            "name": "${IMAGE_NAME}-redis",
            "image": "redis:3.2",
            "cpu": 128,
            "memory": 128,
            "essential": true
        },
        {
            "image": "${AWS_ECS_REPO_DOMAIN}/${IMAGE_NAME}:${IMAGE_VERSION}",
            "name": "${IMAGE_NAME}",
            "cpu": 128,
            "memory": 256,
            // "dependsOn": [
            //     {
            //         "containerName": "${IMAGE_NAME}-redis",
            //         "condition": "START"
            //     },
            //     {
            //         "containerName": "nginx",
            //         "condition": "START"
            //     }
            // ],
            "essential": true,
            "links": ["${IMAGE_NAME}-redis"],
            "portMappings": [
                {
                    "containerPort": 4999,
                    "hostPort": 0,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "VIRTUAL_HOST",
                    "value": "${AWS_VIRTUAL_HOST}"
                },
                {
                    "name": "LETSENCRYPT_HOST",
                    "value": "${LETSENCRYPT_HOST}"
                },
                {
                    "name": "LETSENCRYPT_EMAIL",
                    "value": "${LETSENCRYPT_EMAIL}"
                },
                {
                    "name": "HSTS",
                    "value": "off"
                },
                {
                    "name": "REDIS_HOST",
                    "value": "${IMAGE_NAME}-redis"
                }
            ]
        }
    ]
}

